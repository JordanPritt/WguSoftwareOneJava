<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="600.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.wgu.softwareone.controllers.AddProductController">
    <GridPane prefHeight="400" prefWidth="500" AnchorPane.leftAnchor="25.0"
              AnchorPane.rightAnchor="25.0" AnchorPane.topAnchor="25.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <Label text="Add Product" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <font>
                <Font name="System Bold" size="14.0"/>
            </font>
        </Label>
        <RadioButton mnemonicParsing="false" selected="true" text="In-House" GridPane.columnIndex="2"
                     GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <toggleGroup>
                <ToggleGroup fx:id="inHouseOrOutsourced"/>
            </toggleGroup>
        </RadioButton>
        <RadioButton mnemonicParsing="false" text="Outsourced" GridPane.columnIndex="3" GridPane.halignment="CENTER"
                     GridPane.valignment="CENTER"/>
        <Label text="ID" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER"/>
        <Label text="Name" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER"/>
        <Label text="Inv" GridPane.halignment="CENTER" GridPane.rowIndex="3" GridPane.valignment="CENTER"/>
        <Label text="Price/Cost" GridPane.halignment="CENTER" GridPane.rowIndex="4" GridPane.valignment="CENTER"/>
        <Label text="Max" GridPane.halignment="CENTER" GridPane.rowIndex="5" GridPane.valignment="CENTER"/>
        <Label text="Machine ID" GridPane.halignment="CENTER" GridPane.rowIndex="6" GridPane.valignment="CENTER"/>
        <Button mnemonicParsing="false" prefWidth="75" text="Save" GridPane.columnIndex="2"
                GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.valignment="CENTER"/>
        <Button mnemonicParsing="false" prefWidth="75" text="Cancel" GridPane.columnIndex="3"
                GridPane.halignment="CENTER" GridPane.rowIndex="7" GridPane.valignment="CENTER"/>
        <TextField prefHeight="26.0" prefWidth="80.0" GridPane.columnIndex="3" GridPane.halignment="CENTER"
                   GridPane.rowIndex="5" GridPane.valignment="CENTER"/>
        <TextField GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1"
                   GridPane.valignment="CENTER"/>
        <TextField GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2"
                   GridPane.valignment="CENTER"/>
        <TextField GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3"
                   GridPane.valignment="CENTER"/>
        <TextField GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4"
                   GridPane.valignment="CENTER"/>
        <TextField GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5"
                   GridPane.valignment="CENTER"/>
        <TextField GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="6"
                   GridPane.valignment="CENTER"/>
        <Label text="Min" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="5"
               GridPane.valignment="CENTER"/>
    </GridPane>
</AnchorPane>
